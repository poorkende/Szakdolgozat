<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".add_water">

    <TextView
        android:id="@+id/add_water_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAILY WATER INTAKE"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/your_water_intake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="208dp"
        android:text="Your water intake: \n"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_water_textview" />

    <TextView
        android:id="@+id/recommended_water_intake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Recommended water intake:\n"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_water_textview" />

    <Button
        android:id="@+id/add_water_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="@color/white"
        android:drawableBottom="@drawable/baseline_add_box_24"
        android:foregroundGravity="center"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/add_water_edittext"
        app:layout_constraintEnd_toEndOf="@+id/add_water_edittext"
        app:layout_constraintTop_toBottomOf="@id/add_water_edittext"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/add_water_edittext"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:hint="(dl)"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/your_water_intake"
        app:layout_constraintEnd_toEndOf="@+id/your_water_intake"
        app:layout_constraintTop_toBottomOf="@id/your_water_intake" />


</androidx.constraintlayout.widget.ConstraintLayout>