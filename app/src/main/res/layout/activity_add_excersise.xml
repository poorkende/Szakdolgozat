<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".add_excersise">

    <TextView
        android:id="@+id/add_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your daily exercise"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/your_burnt_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total burnt calories\n"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/save_exercise_button"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/total_workouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total workouts\n"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/your_burnt_calories"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/save_exercise_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:foregroundGravity="center"
        android:text="Save your workout"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
        app:layout_constraintTop_toBottomOf="@+id/add_exercise_time_edittext"/>

    <EditText
        android:id="@+id/add_exercise_edittext"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:hint="Calories burnt"
        android:gravity="center"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_exercise" />

    <EditText
        android:id="@+id/add_exercise_name_edittext"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint="Exercise"
        android:gravity="center"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_exercise" />

    <EditText
        android:id="@+id/add_exercise_time_edittext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:hint="Time of exercise"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_exercise_name_edittext" />

    <Button
        android:id="@+id/back_to_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/menu"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>